<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/tv_activity_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Activity-2"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_jump_success_withIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="回傳成功並跳轉(攜帶資料)"
        app:layout_constraintEnd_toEndOf="@+id/tv_activity_name"
        app:layout_constraintStart_toStartOf="@+id/tv_activity_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_activity_name" />

    <Button
        android:id="@+id/btn_jump_success_withoutIntent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="回傳成功並跳轉(不攜帶資料)"
        app:layout_constraintEnd_toEndOf="@+id/btn_jump_success_withIntent"
        app:layout_constraintStart_toStartOf="@+id/btn_jump_success_withIntent"
        app:layout_constraintTop_toBottomOf="@+id/btn_jump_success_withIntent" />

    <Button
        android:id="@+id/btn_jump_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="回傳失敗並跳轉"
        app:layout_constraintEnd_toEndOf="@+id/btn_jump_success_withoutIntent"
        app:layout_constraintStart_toStartOf="@+id/btn_jump_success_withoutIntent"
        app:layout_constraintTop_toBottomOf="@+id/btn_jump_success_withoutIntent" />

    <Button
        android:id="@+id/btn_jump_custom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="回傳自訂結果碼並跳轉"
        app:layout_constraintEnd_toEndOf="@+id/btn_jump_fail"
        app:layout_constraintStart_toStartOf="@+id/btn_jump_fail"
        app:layout_constraintTop_toBottomOf="@+id/btn_jump_fail" />

    <Button
        android:id="@+id/btn_jump_justFinish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="直接使用finish()"
        app:layout_constraintEnd_toEndOf="@+id/btn_jump_custom"
        app:layout_constraintStart_toStartOf="@+id/btn_jump_custom"
        app:layout_constraintTop_toBottomOf="@+id/btn_jump_custom" />

</androidx.constraintlayout.widget.ConstraintLayout>